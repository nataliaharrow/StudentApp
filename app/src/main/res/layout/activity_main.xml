<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0288D1"
    tools:layout_editor_absoluteY="25dp">


    <Button
        android:id="@+id/buttonCalendar"
        android:layout_width="266dp"
        android:layout_height="71dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="55dp"
        android:background="#29B6F6"
        android:text="Calendar"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonToDoList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonToDoList"
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="54dp"
        android:background="#29B6F6"
        android:text="To Do List"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCalendarAPI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalendar" />

    <Button
        android:id="@+id/buttonCalendarAPI"
        android:layout_width="270dp"
        android:layout_height="76dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="54dp"
        android:background="#29B6F6"
        android:text="Upcoming Deadlines"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonToDoList" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalendarAPI"
        app:srcCompat="@drawable/coffee" />

</android.support.constraint.ConstraintLayout>

